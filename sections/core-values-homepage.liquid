{% comment %}
  Two-thirds text (black background) + one-third image section
{% endcomment %}

<section class="core-values-homepage-section">
  <div class="core-values-section__inner">
    <div class="core-values-section__image">
      <img
        src="{{ section.settings.image | image_url }}"
        class="core-values-section__image-image"
        width="400"
        height="600"
      >
    </div>
    <div class="core-values-content">
      <h2>CORE VALUES</h2>
      <p class="core-values-section__subtext">
        We believe in the power of community and the importance of building a strong foundation for your fitness
        journey.
      </p>

      {% render 'cta-button', url: '/pages/membership', text: 'JOIN THE MEMBERSHIP', class: 'split-section__button' %}
    </div>
  </div>
</section>

<style>
  .core-values-homepage-section {
    font-family: 'Barlow', sans-serif;
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 0;
  }

  .core-values-section__inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    width: 100%;
  }

  .core-values-section__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .core-values-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 4rem;
    text-align: left;
    background-color: #e6e6e6;
  }
</style>

{% schema %}
{
  "name": "Core Values Homepage",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Core Values Image"
    }
  ],
  "presets": [
    {
      "name": "Core Values Homepage",
      "category": "Custom"
    }
  ]
}
{% endschema %}
