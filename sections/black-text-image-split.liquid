{% comment %}
  Two-thirds text (black background) + one-third image section
{% endcomment %}

<section class="split-section">
  <div class="split-section__inner">
    <div class="split-section__video-container">
      {% if section.settings.video_url_2 contains '.mp4' or section.settings.video_url_2 contains '.MP4' %}
        <video
          class="split-section__video"
          src="{{ section.settings.video_url_2 }}"
          loop
          muted
          playsinline
          autoplay
          poster="{% if section.settings.video_poster_1 != blank %}{{ section.settings.video_poster_1 | image_url }}{% endif %}"
        ></video>
      {% endif %}
      <div class="split-section__text">
        <div class="split-section__text-content">
          <div class="split-section__text-content-title">
            TESTED IN TRAINING.<br>
            REFINED BY COMMUNITY.
          </div>
          <p class="split-section__subtext">
            We think everyone builds a stronger version of themselves and of their community when you sweat together.
          </p>

          {% render 'cta-button', popover: 'newsletter-membership-popover', text: 'JOIN THE MEMBERSHIP' %}
        </div>
      </div>
    </div>
    <div class="split-section__image">
      {% if section.settings.image %}
        {%- render 'image-element',
          img: section.settings.image,
          img_width: 2400,
          loading: 'lazy',
          classes: 'split-image',
          sizes: '(min-width: 768px) 400px, 100vw'
        -%}
      {% endif %}
    </div>
  </div>
</section>

<style>
  .split-section {
    font-family: 'Barlow', sans-serif;
    letter-spacing: 0px;
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 0;
  }

  .split-section__inner {
    display: grid;
    grid-template-columns: 5fr 4fr;
    width: 100%;
  }

  .split-section__video-container {
    position: relative;
    background: #000;
    overflow: hidden;
  }

  .split-section__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .split-section__text {
    color: #fff;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: left;
    z-index: 1;
  }

  .split-section__text::before {
    content: '';
    position: absolute;
    inset: 0;
  }

  .split-section__text-content {
    position: relative;
    margin-left: 18px;
    margin-right: 18px;
  }

  .split-section__button {
    margin-top: 1rem;
  }

  .split-section__text-content-title {
    font-size: clamp(2rem, 4.5vw, 5rem);
    font-weight: 400;
    text-transform: uppercase;
    margin-bottom: 1rem;
  }

  .split-section__subtext {
    font-size: 1.25rem;
    font-weight: 400;
  }

  .split-section__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media screen and (max-width: 1024px) {
    .split-section__text-content-title {
      font-size: clamp(2rem, 4.2vw, 5rem);
    }
  }

  @media screen and (max-width: 768px) {
    .split-section__inner {
      grid-template-columns: 1fr;
    }

    .split-section__video-container {
      order: 2;
      min-height: 400px;
    }

    .split-section__image {
      order: 1;
    }

    .split-section__text-content-title {
      margin-top: 0.5rem;
      font-size: clamp(1.5rem, 6vw, 2.5rem);
    }
    .split-section__button {
      margin-bottom: 1rem;
    }

    .split-section__subtext {
      font-size: 1rem;
    }
  }
</style>

{% comment %}
  Include the newsletter popover that will be triggered by the button
{% endcomment %}
{% render 'newsletter-popover', id: 'newsletter-membership-popover' %}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Initialize modal for the newsletter popover
    if (window.theme && window.theme.Modals) {
      new theme.Modals('newsletter-membership-popover', 'newsletter-membership-popover');
    }
  });
</script>

{% schema %}
{
  "name": "Black Text + Image Split",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Side Image"
    },
    {
      "type": "text",
      "id": "video_url_2",
      "label": "Background Video URL",
      "info": "Upload a video file for the left section background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Left Side Background Image"
    }
  ],
  "presets": [
    {
      "name": "Black Text and Image",
      "category": "Custom"
    }
  ]
}
{% endschema %}
