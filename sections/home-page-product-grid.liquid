<section class="home-page-product-grid">
  <div class="variant-selector-grid" id="variant-selector-grid">
    {% comment %}
      {% assign product = all_products[section.settings.product] %}
      {% if product and section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% assign variant = product.variants | where: 'title', block.settings.variant_title | first %}
          {% if variant %}
            <div
              class="variant-selector-item"
              data-variant-id="{{ variant.id }}"
              tabindex="0"
            >
              {% if variant.featured_image %}
                <img
                  src="{{ variant.featured_image | asset_url: 'medium' }}"
                  alt="{{ variant.title }}"
                  style="width: 100%; border-radius:0.75em;"
                  width="100%"
                  height="100%"
                >
              {% endif %}
              <div class="variant-selector-title">{{ variant.title }}</div>
            </div>
          {% endif %}
        {% endfor %}
      {% else %}
        <div style="grid-column: span 3; text-align:center;">
          <em>Please select a product and add up to 9 variant blocks in the section settings.</em>
        </div>
      {% endif %}
    {% endcomment %}
    {% assign product = all_products['product-handle'] %}
    {% assign color_index = product.options_with_values | map: 'name' | index: 'Color' %}
    {% for variant in product.variants %}
      <div class="variant-grid-item">
        <strong>{{ variant.title }}</strong><br>
        {% if variant.featured_image %}
          <img
            src="{{ variant.featured_image | asset_url: 'medium' }}"
            alt="{{ variant.title }}"
            style="width: 100%; border-radius:0.75em;"
            width="100%"
            height="100%"
          >
        {% endif %}
        {% if color_index != null %}
          <p>Color: {{ variant.options[color_index] }}</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .variant-selector-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin: 0 auto;
    max-width: 600px;
  }
  .variant-selector-item {
    background: #fff;
    border: 2px solid #eee;
    border-radius: 1em;
    padding: 16px 8px;
    text-align: center;
    cursor: pointer;
    transition: border 0.2s;
  }
  .variant-selector-item.selected {
    border-color: #222;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
  }
  .variant-selector-item:hover {
    border-color: #888;
  }
  .variant-selector-title {
    margin-top: 8px;
    font-weight: bold;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const grid = document.getElementById('variant-selector-grid');
    if (!grid) return;
    grid.addEventListener('click', function (e) {
      const item = e.target.closest('.variant-selector-item');
      if (!item) return;
      document.querySelectorAll('.variant-selector-item').forEach((el) => el.classList.remove('selected'));
      item.classList.add('selected');
      // Optional: set variant as selected (add to cart logic could go here)
      // const variantId = item.getAttribute('data-variant-id');
      // ... your custom code
    });
  });
</script>

{% schema %}
{
  "name": "Variant Selector Grid",
  "settings": [
    {
      "type": "product",
      "id": "product-for-home-page-grid",
      "label": "Product for Home Page Grid"
    }
  ],
  "blocks": [
    {
      "type": "variant",
      "name": "Variant",
      "settings": [
        {
          "type": "text",
          "id": "variant_title",
          "label": "Variant Title"
        }
      ]
    }
  ],
  "max_blocks": 9,
  "presets": [
    {
      "name": "Variant Selector Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}
