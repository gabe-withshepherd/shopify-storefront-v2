  "name": "Final Btm Photos",
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "top_image",
      "label": "Top image (full width)"
    },
    {
      "type": "image_picker",
      "id": "bottom_left_image",
      "label": "Bottom left image"
    },
    {
      "type": "image_picker",
      "id": "bottom_right_image",
      "label": "Bottom right image"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Join Newsletter"
    }
  ],
  "presets": [
    {
      "name": "BottomProductPhotography"
    }
  ]
}
{% endschema %}
