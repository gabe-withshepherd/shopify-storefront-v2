  }

  @media (max-width: 768px) {
    .core-values-section__inner {
      grid-template-columns: 1fr;
      grid-template-rows: auto 1fr;
    }

    .core-values-homepage-section {
      height: auto;
    }

    .core-values-content {
      height: auto;
      min-height: 500px;
    }

