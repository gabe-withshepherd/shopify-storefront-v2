<style>
  .product-photography-section {
    background-color: #161616;
    padding: 2rem 0;
    font-family: 'Barlow', sans-serif;
  }

  .product-photography-section__title {
    color: #fff;
    text-align: left;
    font-size: 24px;
    font-weight: 500;
    margin-bottom: 20px;
  }

  .product-photography-section__gallery {
    display: flex;
    gap: 0.8rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
  }

  .product-photography-section__gallery > * {
    flex: 0 0 280px;
    scroll-snap-align: center;
  }

  .product-photography-section__gallery::-webkit-scrollbar {
    height: 8px;
  }

  .product-photography-section__gallery::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
  }

  .product-photography-section__gallery::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.3);
  }

  .product-photography-section__item {
    flex-shrink: 0;
    width: 500px;
    margin-bottom: 20px;
  }

  .product-photography-section__image {
    width: 100%;
    height: 600px;
    overflow: hidden;
    margin-bottom: 10px;
    border-radius: 0px;
  }

  .product-photography-section__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .product-photography-section__text {
    color: #fff;
    text-align: left;
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 5px;
    line-height: 1.4;
  }

  .product-photography-section__subtext {
    color: #fff;
    text-align: left;
    font-size: 12px;
    font-weight: 400;
  }

  @media (max-width: 768px) {
    .product-photography-section__item {
      width: 320px;
      height: 500px;
    }

    .product-photography-section__image {
      width: 320px;
      height: 450px;
    }
  }
</style>

