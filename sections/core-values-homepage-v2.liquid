      "label": "Video Poster Image",
      "info": "Fallback image for video"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image (used if no video URL provided)"
    },
    {
      "type": "header",
      "content": "Core Value 2 - Track the Truth"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Core Value 3 - Play the Long Game"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Core Value 4 - No Losses, Only Lessons"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Core Values v2",
      "category": "Content"
    }
  ]
