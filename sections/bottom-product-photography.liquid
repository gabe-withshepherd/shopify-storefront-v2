<section class="bottom-product-photography">
  <div class="page-width">
    <div class="bottom-product-photography__container">
      {%- if section.settings.top_image != blank -%}
        <div class="bottom-product-photography__top-image">
          <div class="image-wrap">
            <img
              src="{{ section.settings.top_image | image_url}}"
              alt="Top image"
              width="400px"
              height="400px"
              loading="lazy"
            >
            <div class="bottom-product-photography__overlay">
              <div class="bottom-product-photography__overlay-content">
                <h2 class="bottom-product-photography__overlay-title">For Intensity.</h2>
                <h2 class="bottom-product-photography__overlay-title">Not Errands.</h2>
                <p class="bottom-product-photography__overlay-subtitle">
                  We think everyone builds a stronger version of themselves and of their community when you sweat
                  together.
                </p>

                {% render 'cta-button', popover: 'newsletter-membership-popover', text: 'JOIN THE MEMBERSHIP' %}
              </div>
            </div>
          </div>
        </div>
      {%- endif -%}

      <div class="bottom-product-photography__bottom-images">
        {%- if section.settings.bottom_left_image != blank -%}
          <div class="bottom-product-photography__bottom-image">
            <div class="image-wrap">
              <img
                src="{{ section.settings.bottom_left_image | image_url }}"
                alt="Bottom left image"
                width="400px"
                height="400px"
                loading="lazy"
              >
            </div>
          </div>
        {%- endif -%}

        {%- if section.settings.bottom_right_image != blank -%}
          <div class="bottom-product-photography__bottom-image">
            <div class="image-wrap">
              <img
                src="{{ section.settings.bottom_right_image | image_url }}"
                alt="Bottom right image"
                width="400px"
                height="400px"
                loading="lazy"
              >
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% style %}
  /* Bottom Product Photography Section */
  .bottom-product-photography {
    padding: 60px 0;
  }

  .bottom-product-photography__container {
    max-width: 100%;
  }

  .bottom-product-photography__top-image {
    margin-bottom: 20px;
  }

  .bottom-product-photography__top-image .image-wrap {
    width: 100%;
    height: auto;
    position: relative;
  }

  .bottom-product-photography__overlay {
    position: absolute;
    top: 0;
    right: 0;
    width: 45%;
    height: 100%;
    display: flex;
    align-items: flex-start;
    justify-content: flex-end;
    padding-top: 50px;
    padding-right: 20px;
    box-sizing: border-box;
  }

  .bottom-product-photography__overlay-content {
    text-align: center;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .bottom-product-photography__overlay-title {
    font-size: clamp(22px, 5vw, 60px);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .bottom-product-photography__overlay-subtitle {
    font-size: 16px;
    margin: 0 0 30px 0;
    line-height: 1.6;
    font-weight: 400;
    text-align: center;
  }
  .bottom-product-photography__bottom-images {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 40px;
  }

  .bottom-product-photography__bottom-image .image-wrap {
    width: 100%;
    height: auto;
  }

  .bottom-product-photography__image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  @media screen and (max-width: 768px) {
    .bottom-product-photography__top-image {
      margin-bottom: 15px;
    }

    .bottom-product-photography__overlay {
      position: absolute;
      width: 100%;
      max-width: none;
      display: flex;
      align-items: flex-end;
      justify-content: flex-end;
      padding-bottom: 10px;
    }

    .bottom-product-photography__overlay-content {
      background: rgba(255, 255, 255, 0.4);
      padding: 20px;
      border-radius: 8px;
      backdrop-filter: blur(5px);
      margin: 0 10px 10px 10px;
    }

    .bottom-product-photography__overlay-title {
      font-size: 22px;
      margin-bottom: 15px;
    }

    .bottom-product-photography__overlay-subtitle {
      font-size: 14px;
      margin-bottom: 20px;
    }

    .bottom-product-photography {
      padding: 40px 0;
    }

    .bottom-product-photography__bottom-images {
      grid-template-columns: 1fr;
      gap: 15px;
      margin-bottom: 30px;
    }
  }
{% endstyle %}

{% comment %}
  Include the newsletter popover that will be triggered by the button
{% endcomment %}
{% render 'newsletter-popover', id: 'newsletter-membership-popover' %}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Initialize modal for the newsletter popover
    if (window.theme && window.theme.Modals) {
      new theme.Modals('newsletter-membership-popover', 'newsletter-membership-popover');
    }
  });
</script>

