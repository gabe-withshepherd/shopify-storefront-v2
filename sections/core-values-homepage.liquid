    /* transition-delay: 0s !important; */
  }

  .accordion-item:not(:hover) .accordion-content p {
    /* transition-delay: 0s !important; */
  }

  .accordion-item:not(:hover) .accordion-header {
    /* transition: padding-top 0.25s cubic-bezier(0.4, 0, 0.6, 1), padding-bottom 0.25s cubic-bezier(0.4, 0, 0.6, 1); */
  }

  .accordion-item {
    min-height: 80px;
    border-bottom: 1px solid #000;
    overflow: hidden;
    flex: 1;
    display: flex;
    flex-direction: column;
