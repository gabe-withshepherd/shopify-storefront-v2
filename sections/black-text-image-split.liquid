{% comment %}
  Two-thirds text (black background) + one-third image section
{% endcomment %}

<section class="split-section">
  <div class="split-section__inner">
    <div
      class="split-section__text"
      style="
        {% if section.settings.background_image %}
          background-image: url({{ section.settings.background_image | image_url }});
        {% endif %}
        background-size: cover;
        background-position: center;
      "
    >
      <div class="split-section__text-content">
        <h2>
          TESTED IN TRAINING.<br>
          REFINED BY COMMUNITY.
        </h2>
        <p class="split-section__subtext">
          We think everyone builds a stronger version of themselves<br>
          and of their community when you sweat together.
        </p>
        {% comment %}
          <a href="/pages/membership" class="split-section__button">
            JOIN THE MEMBERSHIP
            {% render 'custom-icons', icon: 'chevron-right' %}
          </a>
        {% endcomment %}
        <button class="split-section__button" onclick="window.location.href='/pages/membership'">
          JOIN THE MEMBERSHIP
          {% render 'custom-icons', icon: 'chevron-right' %}
        </button>
      </div>
    </div>
    <div class="split-section__image">
      {% if section.settings.image %}
        {%- render 'image-element',
          img: section.settings.image,
          img_width: 2400,
          loading: 'lazy',
          classes: 'split-image',
          sizes: '(min-width: 768px) 400px, 100vw'
        -%}
      {% endif %}
    </div>
  </div>
</section>

<style>
  .split-section {
    font-family: 'Barlow', sans-serif;
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 0;
  }

  .split-section__inner {
    display: grid;
    grid-template-columns: 6fr 4fr;
    width: 100%;
  }

  .split-section__text {
    color: #fff;
    position: relative;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding: 4rem;
    text-align: left;
  }

  .split-section__text::before {
    content: '';
    position: absolute;
    inset: 0;
  }

  .split-section__text-content {
    position: relative;
  }

  .split-section__text h2 {
    font-size: 3.5rem;
    line-height: 1.2;
    font-weight: 400;
    text-transform: uppercase;
    margin-bottom: 1rem;
  }

  .split-section__subtext {
    font-size: 1.25rem;
    font-weight: 400;
    line-height: 1.3;
  }

  .split-section__button {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 1.2rem;
    padding: 0.75rem 0.75rem;
    background-color: #cb5c28;
    color: #fff;
    margin-top: 2.5rem;
    text-transform: uppercase;
    font-weight: 600;
    border-radius: 2px;
    text-decoration: none;
    transition: background 0.3s ease;
  }

  .icon {
    display: block;
    border-color: none;
    background-color: transparent;
    stroke: currentColor; /* Match icon color to button text color */
    fill: transparent;
    transition: transform 0.3s ease; /* Add transition for movement */
  }

  .split-section__button:hover {
    background-color: #fff;
    color: #000;
  }

  .split-section__button:hover .icon {
    transform: translateX(3px) scale(1.1); /* Move icon slightly to the right and enlarge on hover */
  }

  .split-section__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media screen and (max-width: 768px) {
    .split-section__inner {
      grid-template-columns: 1fr;
    }

    .split-section__text {
      order: 2;
    }

    .split-section__image {
      order: 1;
    }

    .split-section__text h2 {
      font-size: 1.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Black Text + Image Split",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Side Image"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Left Side Background Image"
    },
    {
      "type": "video",
      "id": "background_video",
      "label": "Left Side Background Video (.mp4)"
    }
  ],
  "presets": [
    {
      "name": "Black Text and Image",
      "category": "Custom"
    }
  ]
}
{% endschema %}
