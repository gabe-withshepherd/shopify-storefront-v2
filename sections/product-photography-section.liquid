{% assign images = 'https://cdn.shopify.com/s/files/1/0686/3988/3581/files/24_121_7pacific_00601.jpg?v=1753670526'
  | split: ','
%}
{% assign texts = 'Laser Cut Perforations,Photo Description 2,Photo Description 3,Photo Description 4,Photo Description 5'
  | split: ','
%}
{% assign subtexts = 'Located in 3 high sweat areas,Photo Subtext 2,Photo Subtext 3,Photo Subtext 4,Photo Subtext 5'
  | split: ','
%}

<section class="product-photography-section">
  <div class="product-photography-section__container">
    <div class="product-photography-section__title">PRODUCT DETAILS</div>
    <div class="product-photography-section__gallery">
      {% for image in images %}
        <div class="product-photography-section__item">
          <div class="product-photography-section__image">
            <img
              src="https://cdn.shopify.com/s/files/1/0686/3988/3581/files/24_121_7pacific_00601.jpg?v=1753670526"
              alt="{{ texts[forloop.index0] }}"
              width="400"
              height="400"
              loading="lazy"
            >
          </div>
          <div class="product-photography-section__text">
            {{ texts[forloop.index0] }}
          </div>
          <div class="product-photography-section__subtext">
            {{ subtexts[forloop.index0] }}
          </div>
        </div>
        <div class="product-photography-section__item">
          <div class="product-photography-section__image">
            <img
