<section class="bottom-product-photography">
  <div class="page-width">
    <div class="bottom-product-photography__container">
      {%- if section.settings.top_image != blank -%}
        <div class="bottom-product-photography__top-image">
          <div class="image-wrap">
            <img
              src="{{ section.settings.top_image | image_url}}"
              alt="Top image"
              width="400px"
              height="400px"
              loading="lazy"
            >
            <div class="bottom-product-photography__overlay">
              <div class="bottom-product-photography__overlay-content">
                <h2 class="bottom-product-photography__overlay-title">For Intensity.</h2>
                <h2 class="bottom-product-photography__overlay-title">Not Errands.</h2>
                <p class="bottom-product-photography__overlay-subtitle">
                  We think everyone builds a stronger version of themselves and of their community when you sweat
                  together.
                </p>
                <button type="button" class="btn bottom-product-photography__overlay-btn">JOIN THE MEMBERSHIP</button>
              </div>
            </div>
          </div>
        </div>
      {%- endif -%}

      <div class="bottom-product-photography__bottom-images">
        {%- if section.settings.bottom_left_image != blank -%}
          <div class="bottom-product-photography__bottom-image">
            <div class="image-wrap">
              <img
                src="{{ section.settings.bottom_left_image | image_url }}"
                alt="Bottom left image"
                width="400px"
                height="400px"
                loading="lazy"
              >
            </div>
          </div>
        {%- endif -%}

        {%- if section.settings.bottom_right_image != blank -%}
          <div class="bottom-product-photography__bottom-image">
            <div class="image-wrap">
              <img
                src="{{ section.settings.bottom_right_image | image_url }}"
                alt="Bottom right image"
                width="400px"
                height="400px"
                loading="lazy"
              >
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% style %}
  /* Bottom Product Photography Section */
  .bottom-product-photography {
    padding: 60px 0;
  }

  .bottom-product-photography__container {
    max-width: 100%;
  }

  .bottom-product-photography__top-image {
    margin-bottom: 20px;
  }

  .bottom-product-photography__top-image .image-wrap {
    width: 100%;
    height: auto;
    position: relative;
  }

  .bottom-product-photography__overlay {
    position: absolute;
    top: 0;
    right: 0;
    width: 45%;
    height: 100%;
    display: flex;
    align-items: flex-start;
    justify-content: flex-end;
    padding-top: 50px;
    box-sizing: border-box;
    /* background-color: red; */
  }

  .bottom-product-photography__overlay-content {
    text-align: center;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    /* background-color: blue; */
  }

  .bottom-product-photography__overlay-title {
    font-size: clamp(22px, 5vw, 60px);
    font-weight: 500;
    text-transform: uppercase;
    color: #1a1a1a;
    letter-spacing: -0.02em;
  }

  .bottom-product-photography__overlay-subtitle {
    font-size: 16px;
    color: #4a4a4a;
    margin: 0 0 30px 0;
    line-height: 1.6;
    font-weight: 400;
    text-align: center;
    text-transform: uppercase;
  }

  .bottom-product-photography__overlay-btn {
    background-color: #ff6b35;
    color: white;
    border: none;
    padding: 16px 28px;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 0;
    cursor: pointer;
    transition: all 0.3s ease;
    width: auto;
    min-width: 200px;
    box-shadow: 0 4px 16px rgba(255, 107, 53, 0.3);
  }

  .bottom-product-photography__overlay-btn:hover {
    background-color: #e55a2b;
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(255, 107, 53, 0.4);
  }

  .bottom-product-photography__bottom-images {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 40px;
  }

  .bottom-product-photography__bottom-image .image-wrap {
    width: 100%;
    height: auto;
  }

  .bottom-product-photography__image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  @media screen and (max-width: 768px) {
    .bottom-product-photography__top-image {
      margin-bottom: 15px;
    }

    .bottom-product-photography__overlay {
      position: absolute;
      width: 100%;
      max-width: none;
      display: flex;
      align-items: flex-end;
      justify-content: flex-end;
      padding-bottom: 10px;
    }

    .bottom-product-photography__overlay-content {
      background: rgba(255, 255, 255, 0.4);
      padding: 20px;
      border-radius: 8px;
      backdrop-filter: blur(5px);
      margin: 0 10px 10px 10px;
    }

    .bottom-product-photography__overlay-title {
      font-size: 22px;
      margin-bottom: 15px;
    }

    .bottom-product-photography__overlay-subtitle {
      font-size: 14px;
      margin-bottom: 20px;
    }

    .bottom-product-photography__overlay-btn {
      padding: 14px 24px;
      font-size: 12px;
      min-width: 180px;
    }

    .bottom-product-photography {
      padding: 40px 0;
    }

    .bottom-product-photography__bottom-images {
      grid-template-columns: 1fr;
      gap: 15px;
      margin-bottom: 30px;
    }
  }
{% endstyle %}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const ctaButton = document.querySelector('[data-newsletter-trigger]');
    const newsletterModal = document.querySelector('#NewsletterPopup-newsletter-popup');

    if (ctaButton && newsletterModal) {
      ctaButton.addEventListener('click', function () {
        newsletterModal.style.display = 'block';
        document.body.classList.add('modal-open');
      });
    }
  });
</script>

