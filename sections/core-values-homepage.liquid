{% comment %}
  Two-thirds text (black background) + one-third image section
{% endcomment %}

<section class="core-values-homepage-section">
  <div class="core-values-section__inner">
    <div
      class="core-values-section__text"
    >
      <div class="core-values-section__text-content">
        <h2>CORE VALUES</h2>
        <p class="core-values-section__subtext">
          We believe in the power of community and the importance of building a strong foundation for your fitness
          journey.
        </p>

        {% render 'cta-button', url: '/pages/membership', text: 'JOIN THE MEMBERSHIP', class: 'split-section__button' %}
      </div>
    </div>
    <div class="core-values-section__image">
      <img
        src="{{ section.settings.image | image_url }}"
        class="core-values-section__image-image"
        width="400"
        height="600"
      >
    </div>
  </div>
</section>

<style>
  .core-values-homepage-section {
    font-family: 'Barlow', sans-serif;
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 0;
  }

  .core-values-section__inner {
    display: grid;
    grid-template-columns: 6fr 4fr;
    width: 100%;
  }

  .core-values-section__text {
    color: #fff;
    position: relative;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding: 4rem;
    text-align: left;
  }

  .core-values-section__text::before {
    content: '';
    position: absolute;
    inset: 0;
  }

  .core-values-section__text-content {
    position: relative;
  }

  .core-values-section__text h2 {
    font-size: 3.5rem;
    line-height: 1.2;
    font-weight: 400;
    text-transform: uppercase;
    margin-bottom: 1rem;
  }

  .core-values-section__subtext {
    font-size: 1.25rem;
    font-weight: 400;
    line-height: 1.3;
  }

  .core-values-section__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media screen and (max-width: 768px) {
    .split-section__inner {
      grid-template-columns: 1fr;
    }

    .split-section__text {
      order: 2;
    }

    .split-section__image {
      order: 1;
    }

    .split-section__text h2 {
      font-size: 1.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Core Values Homepage",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Core Values Image"
    }
  ],
  "presets": [
    {
      "name": "Core Values Homepage",
      "category": "Custom"
    }
  ]
}
{% endschema %}
