<section class="related-products-section">
  <div class="page-width">
    <div class="default-title-header">
      <h2 class="default-title-header-title">PLANNING ON SWEATING MORE?</h2>
      <p class="default-title-header-subtitle">Shop more of what you need to get you through those sessions.</p>
    </div>

    <div class="related-products-grid">
      {% render 'product-cell', product_handle: 'airrail-6-performance-shorts-mint' %}
      {% render 'product-cell', product_handle: 'tracefiber-performance-tech-tee-mountain-mist' %}
      {% render 'product-cell', product_handle: 'motionframe-running-hat' %}
    </div>
  </div>
</section>

<style>
  .related-products-section {
    padding: 1rem 0.5rem;
    font-family: 'Barlow', sans-serif;
    margin-bottom: 3rem;
  }

  .default-title-header {
    text-align: left;
    margin-bottom: 2rem;
    font-weight: 400;
  }

  .default-title-header-title {
    font-size: 2.5rem;
    font-weight: 500;
    letter-spacing: 1px;
    margin-bottom: 0.5rem;
  }

  .default-title-header-subtitle {
    font-size: 1.1rem;
  }

  .related-products-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0;
  }

  @media (max-width: 768px) {
    .related-products-grid {
      display: flex;
      overflow-x: scroll;
      scroll-snap-type: x mandatory;
      overflow-y: hidden; /* hide vertical scrollbar */
      white-space: nowrap;
      /* -webkit-overflow-scrolling: touch; */
      gap: 1rem;
    }

    .related-products-grid > * {
      flex: 0 0 280px;
      scroll-snap-align: start;
    }

    .related-products-grid::-webkit-scrollbar {
      height: 2px;
      flex: 1;
    }

    .related-products-grid::-webkit-scrollbar-track {
      background: lightgrey;
      border-radius: 2px;
    }

    .related-products-grid::-webkit-scrollbar-thumb {
      background: black;
      border-radius: 2px;
    }

    .color-swatches-container {
      padding: 6px;
      gap: 4px;
    }
  }
</style>

